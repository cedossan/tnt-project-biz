<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
  
      <RollingFile name="tnt" fileName="${sys:catalina.home}/logs/tnt/latest.log"
                 filePattern="${sys:catalina.home}/logs/tnt/tnt-%d{MM-dd-yyyy}-%i.log">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>

      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="1 MB"/>
      </Policies>
    </RollingFile>
    
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="tnt"/>
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>